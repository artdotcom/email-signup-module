@require '../example/themes/variables.styl'
.footer-custom .footer-contact>div:not(:last-child)
    margin-bottom: 2.5em

.footer-email div
    width: 100%

#footer-email-form
    height: 44px

#hdrEmailForm .error
#footer-email-form .error
    display: none
    color: red
    text-align: left

#footer-email .error
    display: none
    color: Red
    text-align: left

#footer-email-form #footer-email-input
    border: 1px solid #f0f0f0
    border-right: none
    border-radius: 2px 0 0 2px
    font-size: 14px
    &:hover
        border: 1px solid #888
    &:focus
        border: 1px solid #ef9223
        outline: #ef9223 auto 5px

#footer-email-form #footer-email-input
    background: #FFF
    border: 1px solid #D6D6D6
    box-sizing: border-box
    color: #888
    float: left
    padding: 5px
    width: 70%
    height: 100%

.footer-email-form .input
    background: #FFF
    border: 1px solid #D6D6D6
    color: #898888
    display: inline
    float: left
    font-size: 11px
    height: 22px
    line-height: 20px
    padding: 0 4px
    width: 252px

#footer-email-form .button
    background: #253d59
    color: #fff
    font-weight: 500
    text-transform: capitalize
    border-radius: 0 2px 2px 0
    -webkit-appearance: none
    &:hover
        background: black
        color: #FFF
        outline: none
    &:active
        background: black
        color: #FFF
        outline: none

#footer-email-form .button
    width: 30%
    height: 100%
    padding: 5px
    float: left
    border: 1px solid #DFDFDF
    box-sizing: border-box
    color: #000
    text-align: center
    text-transform: uppercase
    cursor: pointer
    vertical-align: middle
    outline: 0

.footer-email-form .button
    background: url(https://cache1.artprintimages.com/images/jump_pages/rebrand2/images/subnav2.png) -339px -156px
    border: 1px solid #D6D6D6
    color: #000
    display: inline
    float: right
    height: 24px
    padding: 0
    width: 54px
    cursor: pointer

.footer-email-privacy-policy
    display: inline-block
    margin-top: 5px!important
    overflow: hidden
    padding: 0

.footer-email
    text-align: center

.footer-email
    float: none
    width: 100%
    overflow: auto
    margin: 0

@media only screen and (min-width: $break-point-medium)
    .footer-email
        width: 50%
        float: left
        text-align: left

@media only screen and (min-width: $break-point-large)
    .footer-email
        width: 100%

